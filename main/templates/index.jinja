{% extends 'base.jinja' %}

{% block content %}

    <div class="flex flex-col lg:flex-row justify-center items-center size-full">
        <!-- Create Game -->
        <a href="{{ url('games:create') }}" class="flex-1 group flex flex-col justify-center items-center w-full hover:scale-[1.05] active:scale-[1.1] transition-all cursor-pointer">
            <iconify-icon icon="fa-solid:plus" class="mb-2 sm:mb-4 lg:mb-6 2xl:mb-8 size-12 sm:size-16 lg:size-20 2xl:size-24 text-pink-700 group-hover:text-pink-600 group-hover:rotate-90 transition-all ease-in-out duration-300" height="none"></iconify-icon>
            <span class="text-2xl sm:text-3xl lg:text-5xl 2xl:text-7xl group-hover:text-white font-bold transition-colors">
                Create Game
            </span>
        </a>

        <!-- Divider -->
        <div class="h-0.5 w-32 lg:h-32 lg:w-0.5 rounded-full bg-neutral-300/2.5"></div>

        <!-- Join Game -->
        <a href="{{ url('games:join') }}" class="flex-1 group flex flex-col justify-center items-center w-full hover:scale-[1.05] active:scale-[1.1] transition-all cursor-pointer">
            <iconify-icon icon="clarity:group-solid" class="mb-2 sm:mb-4 lg:mb-6 2xl:mb-8 size-12 sm:size-16 lg:size-20 2xl:size-24 text-pink-700 group-hover:text-pink-600 transition-all ease-in-out duration-300" height="none"></iconify-icon>
            <span class="text-2xl sm:text-3xl lg:text-5xl 2xl:text-7xl group-hover:text-white font-bold transition-colors">
                Join Game
            </span>
        </a>
    </div>
{% endblock %}
