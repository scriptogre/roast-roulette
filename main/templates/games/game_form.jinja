{% extends 'base.jinja' %}

{% block content %}
    <div class="flex flex-col justify-center items-center h-full">

        <form id="game-form"
              class="flex flex-col items-center p-8 bg-neutral-300/2.5 border border-neutral-300/5 rounded-xl"
                {% if is_joining %}
              hx-post="{{ url('games:join') }}"
                {% else %}
              hx-post="{{ url('games:create') }}"
                {% endif %}
        >
            {% csrf_token %}
            <div class="relative flex items-center">
                {# Holds the value of the selected avatar #}
                <input type="hidden" name="avatar" value="1">

                {# Avatar image #}
                <img src="{{ static('images/avatar/1.svg') }}" class="size-32 object-center -translate-y-0.75" alt="Avatar">

                {# Button to randomize the avatar #}
                <button class="absolute group right-0 bottom-0 inline-flex justify-center items-center cursor-pointer" type="button"
                        onclick="
                                // Randomize input value (1 - 8)
                                // Ensure it's not the same as the current value
                                let newValue;
                                do {
                                newValue = Math.floor(Math.random() * 8) + 1;
                                } while (newValue === parseInt(document.querySelector('[name=avatar]').value));

                                // Update input value
                                document.querySelector('[name=avatar]').value = newValue;

                                // Update avatar image
                                document.querySelector('img').src = `{{ static('images/avatar/') }}${newValue}.svg`;
                                "
                >
                    <iconify-icon icon="fa6-solid:rotate-left" class="text-xl group-hover:text-white"></iconify-icon>
                </button>
            </div>

            <label class="relative mt-4">
                <iconify-icon icon="solar:user-bold" class="absolute scale-[1.2] left-3 top-1/2 -translate-y-[calc(50%+1px)] translate-x-0.5"></iconify-icon>
                <input class="rounded-lg border ps-11 pe-3 py-2 outline-none border-1 border-neutral-300/20 placeholder-neutral-300"
                       type="text"
                       name="player_name"
                       placeholder="Enter a nickname"
                       required
                />
            </label>

            {% if is_joining %}
                <label class="relative mt-4">
                    <iconify-icon icon="fa-solid:gamepad" class="absolute left-3 top-1/2 -translate-y-1/2"></iconify-icon>
                    <input class="rounded-lg border ps-11 pe-3 py-2 outline-none border-1 border-neutral-300/20 placeholder-neutral-300"
                           type="text"
                           name="game_code"
                           placeholder="Enter game code"
                           maxlength="6"
                           required
                    />
                </label>
            {% endif %}
        </form>

        {# Submits the #game-form #}
        <button form="game-form" type="submit" class="group p-4 mt-4 text-3xl hover:text-white hover:scale-[115%] hover:rotate-[1deg] transition-all cursor-pointer">
            <span class="font-bold relative after:absolute after:left-0 after:top-0 after:content-['Go_!'] after:-z-10 after:text-pink-700 group-hover:after:text-pink-500 group-hover:after:-translate-x-0.75 after:transition-all">
                Go !
            </span>
        </button>
    </div>
{% endblock %}
